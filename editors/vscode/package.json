{
  "name": "langz",
  "displayName": "Langz",
  "description": "Language support for Langz (.lz) â€” a scripting language that transpiles to Bash",
  "version": "0.1.0",
  "publisher": "tasnimzotder",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": ["Programming Languages"],
  "activationEvents": [
    "onLanguage:langz"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [{
      "id": "langz",
      "aliases": ["Langz", "langz"],
      "extensions": [".lz"],
      "configuration": "./language-configuration.json"
    }],
    "grammars": [{
      "language": "langz",
      "scopeName": "source.langz",
      "path": "./syntaxes/langz.tmLanguage.json"
    }],
    "configuration": {
      "title": "Langz",
      "properties": {
        "langz.serverPath": {
          "type": "string",
          "default": "langz",
          "description": "Path to the langz binary"
        }
      }
    }
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  },
  "devDependencies": {
    "@types/node": "^25.2.2",
    "@types/vscode": "^1.75.0",
    "@vscode/vsce": "^3.7.1",
    "typescript": "^5.3.0"
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  }
}
